<!DOCTYPE html>
<html lang="en">
<head>
    <title>Order Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/drink.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #000; /* Black text color */
            text-align: center;
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
        }
        .form-container h1 {
            margin-bottom: 20px;
            font-size: 2em; /* Increased font size for heading */
        }
        .form-container input[type="radio"] {
            margin-right: 10px;
        }
        .form-container label {
            display: block;
            margin: 10px 0;
            font-size: 1em; /* Increased font size for labels */
        }
        .form-container button {
            background-color: #4CAF50; /* Green background */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
            font-size: 16px;
        }
        .form-container button:hover {
            background-color: #45a049; /* Darker green on hover */
        }
        .form-container .actions {
            display: flex;
            justify-content: space-around;
            width: 100%;
        }
        .form-container .actions button {
            flex: 1; /* Make buttons take equal width */
            margin: 5px;
        }
        .form-container img {
            width: 50px; /* Adjust the image size as needed */
            height: auto;
            vertical-align: middle;
            margin-right: 10px;
        }
        .logout-button {
            background-color: #4CAF50; /* Green background for logout button */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        .logout-button:hover {
            background-color: #45a049; /* Darker green on hover */
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Place Your Order</h1>
        <form method="get" id="form1" action="">
            <!-- Name Selection -->
            <label for="name">Choose a Drink:</label>
            <input type="radio" id="name" name="name" value="milkT">
            <img src="/milktea.jpeg" alt="Milk Tea"> Milk Tea<br>

            <input type="radio" id="name" name="name" value="orangeT">
            <img src="/Orange.jpg" alt="Orange Tea"> Orange Tea<br>

            <input type="radio" id="name" name="name" value="greenT">
            <img src="/Green.webp" alt="Green Tea"> Green Tea<br>

            <!-- Ice Level -->
            <label for="ice">Ice Level:</label>
            <input type="radio" id="ice" name="ice" value="100">100%
            <input type="radio" id="ice" name="ice" value="75">75%
            <input type="radio" id="ice" name="ice" value="50">50%
            <input type="radio" id="ice" name="ice" value="25">25%
            <input type="radio" id="ice" name="ice" value="0">0%<br>

            <!-- Order Amount -->
            <label for="orderAmount">Order Amount:</label>
            <input type="radio" id="orderAmount" name="orderAmount" value="1">1
            <input type="radio" id="orderAmount" name="orderAmount" value="2">2
            <input type="radio" id="orderAmount" name="orderAmount" value="3">3
            <input type="radio" id="orderAmount" name="orderAmount" value="4">4
            <input type="radio" id="orderAmount" name="orderAmount" value="5">5<br>

            <!-- Size -->
            <label for="size">Size:</label>
            <input type="radio" id="size" name="size" value="L">Large
            <input type="radio" id="size" name="size" value="M">Medium
            <input type="radio" id="size" name="size" value="S">Small<br>

            <!-- Sugar Level -->
            <label for="sugar">Sugar Level:</label>
            <input type="radio" id="sugar" name="sugar" value="100">100%
            <input type="radio" id="sugar" name="sugar" value="75">75%
            <input type="radio" id="sugar" name="sugar" value="50">50%
            <input type="radio" id="sugar" name="sugar" value="25">25%
            <input type="radio" id="sugar" name="sugar" value="0">0%<br>

            <div class="actions">
                <button type="button" value="CREATE" onclick="link('create')">CREATE</button>
                <button type="button" value="UPDATE" onclick="link('update')">UPDATE</button>
                <button type="button" value="READ" onclick="link('read')">READ</button>
                <button type="button" value="DELETE" onclick="link('delete')">DELETE</button>
                <button type="reset">RESET</button>
            </div>
        </form>
        <form method="get" action="/logout">
            <input type="submit" value="LOGOUT" class="logout-button"/>
        </form>
    </div>

    <script>
        function link(action) {
            const form = document.getElementById('form1');
            const name = document.getElementById('name').value;
            const ice = document.getElementById('ice').value;
            const amount = document.getElementById('orderAmount').value;
            const size = document.getElementById('size').value;
            const sugar = document.getElementById('sugar').value;

            let url = `/order/${action}?name=${name}&ice=${ice}&amount=${amount}&size=${size}&sugar=${sugar}`;
            form.action = url;
            form.submit();
        }
    </script>
</body>
</html>
