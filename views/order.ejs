<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/drink.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #333; /* Darker text color */
            text-align: center;
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px; /* Increased padding for larger text */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 550px; /* Adjusted max-width */
        }
        .form-container h1 {
            margin-bottom: 30px; /* Increased margin for larger text */
            font-size: 2.5em; /* Larger font size */
        }
        .form-container label {
            display: block;
            margin: 15px 0; /* Increased margin for better spacing */
            font-size: 1.2em; /* Larger font size */
        }
        .form-container input[type="radio"],
        .form-container img {
            margin-right: 15px; /* Increased gap between radio buttons and images */
        }
        .form-container img {
            width: 60px; /* Adjusted image size */
            height: auto;
            vertical-align: middle;
        }
        .form-container button {
            background-color: #4CAF50; /* Green background */
            color: white;
            border: none;
            padding: 15px 20px; /* Increased padding for larger text */
            border-radius: 5px;
            cursor: pointer;
            margin-top: 30px; /* Increased margin for better spacing */
            font-size: 1.2em; /* Larger font size */
        }
        .form-container button:hover {
            background-color: #45a049; /* Darker green on hover */
        }
        .form-container .actions {
            display: flex;
            justify-content: space-around;
            width: 100%;
            margin-top: 20px; /* Increased margin for better spacing */
        }
        .form-container .actions button {
            flex: 1; /* Make buttons take equal width */
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Place Your Order</h1>
        <form method="get" id="form1" action="">
            <!-- Name Selection -->
            <div class="drink-options">
                <label for="name">Choose a Drink:</label>
                <div class="drink-option">
                    <input type="radio" id="milkT" name="name" value="milkT">
                    <img src="/milktea.jpeg" alt="Milk Tea"> Milk Tea
                </div>
                <div class="drink-option">
                    <input type="radio" id="orangeT" name="name" value="orangeT">
                    <img src="/orange-tea.jpg" alt="Orange Tea"> Orange Tea
                </div>
                <div class="drink-option">
                    <input type="radio" id="greenT" name="name" value="greenT">
                    <img src="/green-tea.jpg" alt="Green Tea"> Green Tea
                </div>
            </div>

            <!-- Ice Level -->
            <label for="ice">Ice Level:</label>
            <input type="radio" id="ice100" name="ice" value="100">100%
            <input type="radio" id="ice75" name="ice" value="75">75%
            <input type="radio" id="ice50" name="ice" value="50">50%
            <input type="radio" id="ice25" name="ice" value="25">25%
            <input type="radio" id="ice0" name="ice" value="0">0%<br>

            <!-- Order Amount -->
            <label for="orderAmount">Order Amount:</label>
            <input type="radio" id="orderAmount1" name="orderAmount" value="1">1
            <input type="radio" id="orderAmount2" name="orderAmount" value="2">2
            <input type="radio" id="orderAmount3" name="orderAmount" value="3">3
            <input type="radio" id="orderAmount4" name="orderAmount" value="4">4
            <input type="radio" id="orderAmount5" name="orderAmount" value="5">5<br>

            <!-- Size -->
            <label for="size">Size:</label>
            <input type="radio" id="sizeL" name="size" value="L">Large
            <input type="radio" id="sizeM" name="size" value="M">Medium
            <input type="radio" id="sizeS" name="size" value="S">Small<br>

            <!-- Sugar Level -->
            <label for="sugar">Sugar Level:</label>
            <input type="radio" id="sugar100" name="sugar" value="100">100%
            <input type="radio" id="sugar75" name="sugar" value="75">75%
            <input type="radio" id="sugar50" name="sugar" value="50">50%
            <input type="radio" id="sugar25" name="sugar" value="25">25%
            <input type="radio" id="sugar0" name="sugar" value="0">0%<br>

            <div class="actions">
                <button type="button" value="CREATE" onclick="link('create')">CREATE</button>
                <button type="button" value="UPDATE" onclick="link('update')">UPDATE</button>
                <button type="button" value="READ" onclick="link('read')">READ</button>
                <button type="button" value="DELETE" onclick="link('delete')">DELETE</button>
                <button type="reset">RESET</button>
            </div>
        </form>
        <form method="get" action="/logout">
            <input type="submit" value="LOGOUT"/>
        </form>
    </div>

    <script>
        function link(action) {
            const form = document.getElementById('form1');
            const name = document.getElementById('name').value;
            const ice = document.getElementById('ice').value;
            const amount = document.getElementById('orderAmount').value;
            const size = document.getElementById('size').value;
            const sugar = document.getElementById('sugar').value;

            let url = `/order/${action}?name=${name}&ice=${ice}&amount=${amount}&size=${size}&sugar=${sugar}`;
            form.action = url;
            form.submit();
        }
    </script>
</body>
</html>
