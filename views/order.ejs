<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Form</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/th.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .order-form-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            text-align: center;
        }
        .order-form-container h1 {
            margin-bottom: 20px;
        }
        .order-form-container input[type="radio"] {
            margin-right: 10px;
        }
        .order-form-container label {
            display: block;
            margin: 10px 0;
        }
        .order-form-container button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 15px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin: 5px;
            font-size: 16px;
            width: 100%;
        }
        .order-form-container button:hover {
            background-color: #45a049;
        }
        .order-form-container .actions {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }
        .order-form-container img {
            width: 50px;
            height: 50px;
            vertical-align: middle;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="order-form-container">
        <h1>Order Form</h1>
        <form id="form1" method="get">
            <div>
                <label>
                    <img src="/milk_tea.jpg" alt="Milk Tea">
                    <input type="radio" id="name" name="name" value="milkT">Milk Tea
                </label>
                <label>
                    <img src="/Orange_tea.jpg" alt="Orange Tea">
                    <input type="radio" id="name" name="name" value="orangeT">Orange Tea
                </label>
                <label>
                    <img src="/Green_tea.jpg" alt="Green Tea">
                    <input type="radio" id="name" name="name" value="greenT">Green Tea
                </label>
            </div>
            <div>
                <label>Ice:</label>
                <input type="radio" id="ice" name="ice" value="100">100%
                <input type="radio" id="ice" name="ice" value="75">75%
                <input type="radio" id="ice" name="ice" value="50">50%
                <input type="radio" id="ice" name="ice" value="25">25%
                <input type="radio" id="ice" name="ice" value="0">0%
            </div>
            <div>
                <label>Order Amount:</label>
                <input type="radio" id="orderAmount" name="orderAmount" value="1">1
                <input type="radio" id="orderAmount" name="orderAmount" value="2">2
                <input type="radio" id="orderAmount" name="orderAmount" value="3">3
                <input type="radio" id="orderAmount" name="orderAmount" value="4">4
                <input type="radio" id="orderAmount" name="orderAmount" value="5">5
            </div>
            <div>
                <label>Size:</label>
                <input type="radio" id="size" name="size" value="L">Large
                <input type="radio" id="size" name="size" value="M">Medium
                <input type="radio" id="size" name="size" value="S">Small
            </div>
            <div>
                <label>Sugar:</label>
                <input type="radio" id="sugar" name="sugar" value="100">100%
                <input type="radio" id="sugar" name="sugar" value="75">75%
                <input type="radio" id="sugar" name="sugar" value="50">50%
                <input type="radio" id="sugar" name="sugar" value="25">25%
                <input type="radio" id="sugar" name="sugar" value="0">0%
            </div>
            <div class="actions">
                <button type="button" onclick="link('create')">CREATE</button>
                <button type="button" onclick="link('update')">UPDATE</button>
                <button type="button" onclick="link('read')">READ</button>
                <button type="button" onclick="link('delete')">DELETE</button>
                <button type="reset">RESET</button>
            </div>
        </form>
        <form method="get" action="/logout" style="margin-top: 20px;">
            <button type="submit">LOGOUT</button>
        </form>
    </div>
    <script>
        function link(a) {
            const CRUD = a;
            const curUrl = window.location.href;
            const name = document.querySelector('input[name="name"]:checked').value;
            const ice = document.querySelector('input[name="ice"]:checked').value;
            const orderAmount = document.querySelector('input[name="orderAmount"]:checked').value;
            const size = document.querySelector('input[name="size"]:checked').value;
            const sugar = document.querySelector('input[name="sugar"]:checked').value;
            let url = `${curUrl}/${CRUD}?name=${name}&ice=${ice}&orderAmount=${orderAmount}&size=${size}&sugar=${sugar}`;
            document.getElementById('form1').action = url;
            document.getElementById('form1').submit();
        }
    </script>
</body>
</html>
